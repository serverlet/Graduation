<Window x:Class="Xfy.GraduationPhoto.Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xfy.GraduationPhoto.Manager"
        mc:Ignorable="d"
        Title="照片管理程序" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Cursor="Hand" Grid.Column="0" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Margin="10,10,10,10" Source="Resource\left.png"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Image UseLayoutRounding="True" Source="Resource\add.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Cursor="Hand">
            </Image>
        </StackPanel>
        <StackPanel Cursor="Hand" Grid.Column="2" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Margin="10,10,10,10" RenderTransformOrigin="0.5,0.5" Source="Resource\left.png">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="-1">

                    </ScaleTransform>
                </Image.RenderTransform>
            </Image>
        </StackPanel>
    </Grid>
</Window>
